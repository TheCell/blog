---
export interface Props {
	tag: string,
	isArchivalTag: boolean
}

const { tag, isArchivalTag } = Astro.props;
const href = isArchivalTag ? `/tags-archive/${tag.toLowerCase()}` : `/tags/${tag.toLowerCase()}`;
---

<a href={href} aria-label={tag}>
	<span
		class='bg-indigo-600 font-semibold text-white dark:bg-indigo-900 dark:text-white shadow text-sm w-fit px-2 py-1 md:px-5 md:py-2 rounded-full'
	>
		{tag ?? 'Blog Tag'}
	</span>
</a>
